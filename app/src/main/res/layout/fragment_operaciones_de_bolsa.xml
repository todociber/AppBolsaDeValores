<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context="com.todociber.appbolsadevalores.OrdenesCasa.fragments.OperacionesDeBolsa">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/ListadoOperaciones"
        android:layout_height="match_parent">
    </ListView>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/sinConetido"
        android:background="@color/blanco"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:tint="@color/verdeBolsaOscruco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/datos"
            />

    </LinearLayout>

</LinearLayout>

